    </div>
    <div class="col-md-3">
      <select class="form-control" id="select_tags" name="tags">
        <option value=""> – Tags –</option>
        <% @tags_set.each do |tag|%>
           <option value="<%=tag.downcase%>" <% if params[:tags] == tag.downcase %> selected <% end %>><%= tag.capitalize %> </option>
         <% end %>
      </select>
    </div>
    <div class="col-md-3">
      <button type="submit" class="btn btn-primary">Update</button>
    </div>
  </div>
  </form>
<% end %>

<% if params[:theatre] == 'southbank' %>
  <form action="/theatres/southbank">
    <div class="row">
      <div class="col-md-3">
        <select class="form-control" id="select_tags" name="tags">
          <option value=""> – Tags –</option>

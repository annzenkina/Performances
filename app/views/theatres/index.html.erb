<% @event_arr.each do |event| %>
  <h2 class="event-title"> <%= link_to event.theatre + " – " + event.title, event.link %></h2>
  <div class="row">
    <div class="col-lg-6">
        <%= image_tag event.poster, class: "img-rounded" %>
    </div>
    <div class="col-lg-6 text-justify">
        <h5><%= event.date %> </h5>
        <h5><%= event.time %> </h5>
        <h5><%= event.price || "No price available" %> </h5>
        <p><%= event.description %></p>
        <strong><%= event.tags %></strong>
    </div>
    <!--<div class="col-xs-6 col-md-4"></div>-->
  </div>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title>Performances</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
      integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
      crossorigin="anonymous">
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Parser</a>
        </div>
        <ul class="nav navbar-nav">
            <li<% if params[:theatre] == 'southbank'%> class=active<% end %>><%= link_to 'Southbank', '/theatres/southbank' %></li>
            <li<% if params[:theatre] == 'national'%> class=active<% end %>><%= link_to 'National Theatre', '/theatres/national' %></li>
            <li<% if params[:theatre] == 'roh'%> class=active<% end %>><%= link_to 'Royal Opera', '/theatres/roh' %></li>
            <li<% if params[:theatre] == nil%> class=active<% end %>><%= link_to 'All', theatres_path %></li>
        </ul>
      </div>
    </nav>

    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
